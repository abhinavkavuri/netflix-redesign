@import url('https://fonts.googleapis.com/css?family=Kanit:500');
*
  box-sizing border-box

body
html
  background radial-gradient(#dcd7d7 200%, #000 400%)
  display flex
  align-items center
  justify-content center
  font-family 'Kanit', sans-serif
  width 100vw
  min-height 100vh
  text-transform uppercase
  font-weight 300
  letter-spacing .5rem
  perspective 2500px
  transform-style preserve-3d

genShadow(amount = 100)
  shadow = ()
  for num in (0..amount)
    push(shadow,(((num + 1) * 2px) ((num) * 3px) 0 rgba(140, 140, 140, 1)))
  shift(shadow)
  shift(shadow)
  shift(shadow)
  shift(shadow)
  unquote(join(',', shadow))

.title
  position relative
  display flex
  justify-content center
  align-items flex-start
  display grid
  grid-template-columns repeat(7, auto)

span
  color #dcd7d7
  font-size 5rem
  display inline-block

  &:nth-of-type(1)
  &:nth-of-type(7)
    font-size 5rem
    height 3.4rem
    line-height 3.2rem

  &:nth-of-type(2)
  &:nth-of-type(6)
    font-size 4.8rem
    height 3.2rem
    line-height 3rem

  &:nth-of-type(3)
  &:nth-of-type(4)
    font-size 4.4rem
    height 3rem
    line-height 2.8rem

  &:nth-of-type(5)
    font-size 4.5rem
    height 3rem
    line-height 2.7rem

  for l in (1..7)
    &:nth-of-type({l})
      animation-duration (1s - ((l) * .05s)), .5s
      animation-delay (.5s + (l * .05s)), 1s
      animation-fill-mode both, forwards
      animation-timing-function ease, steps(1)

  &.play
    animation-name shadow-entry, fill

@keyframes shadow-entry
  0%
    color #dcd7d7
  50%
    text-shadow genShadow(40)
  40%
    transform translate3d(0, 0, 60px) scale(1.2)
  60%
    transform translate3d(0, 0, 60px) scale(1.3)
    text-shadow genShadow(50)

@keyframes fill
  to
    color #c80002